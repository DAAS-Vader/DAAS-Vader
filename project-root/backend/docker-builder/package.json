{
  "name": "daas-docker-builder",
  "version": "1.0.0",
  "description": "Docker Builder Service for DAAS Vader Platform",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "start": "node dist/dockerBuilderApp.js",
    "dev": "tsx watch src/dockerBuilderApp.ts",
    "build": "tsc",
    "test": "jest",
    "docker:build": "docker build -t daas-docker-builder .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f docker-builder",
    "docker:restart": "docker-compose restart docker-builder"
  },
  "keywords": [
    "docker",
    "builder",
    "daas",
    "containerization"
  ],
  "author": "DAAS Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "axios": "^1.6.7",
    "tar": "^7.0.1",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/tar": "^6.1.11",
    "@types/node": "^20.11.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11"
  }
}